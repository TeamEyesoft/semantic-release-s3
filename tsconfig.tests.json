{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["ES2021", "DOM", "DOM.ITERABLE"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "strict": true,
        "target": "ES2021",
        "module": "commonjs",
        "typeRoots": ["node_modules/@types"],
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}
